<Window x:Class="SMT.PasteInfrastructureUpgradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paste Infrastructure Upgrades" Height="420" Width="620"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="Paste upgrades text below:" Margin="0,0,0,6" />
            <TextBlock Text="Example: 6T3I-L &lt;- Major Threat Detection Array 3" Opacity="0.7" />
        </StackPanel>

        <TextBox x:Name="PasteTextBox"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"
                 ToolTip="Supports Rift format: SYSTEM &lt;- Upgrade Name 3, Another Upgrade 2"
                 Margin="0,0,0,8" />

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Import" Width="90" Margin="0,0,8,0" Click="Import_Click" />
            <Button Content="Cancel" Width="90" IsCancel="True" />
        </StackPanel>
    </DockPanel>
</Window>
