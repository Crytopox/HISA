<Window x:Class="HISA.CustomRegionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Regions"
        Height="470"
        Width="560"
        MinHeight="420"
        MinWidth="480"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource UiBackgroundBrush}" Style="{StaticResource ModernWindowStyle}">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="14" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Custom Regions" Style="{StaticResource TitleTextStyle}" />
                <TextBlock Text='Imported regions are locked by default. Toggle "Allow Edit" to unlock editing.'
                           Style="{StaticResource SubtitleTextStyle}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="4,0,4,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="110" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Region Name" Style="{StaticResource FieldLabelTextStyle}" />
                    <TextBlock Grid.Column="1" Text="Allow Edit" Style="{StaticResource FieldLabelTextStyle}" HorizontalAlignment="Center" />
                </Grid>

                <ListView x:Name="RegionsList" Grid.Row="1" Style="{StaticResource ModernListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="110" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource UiTextPrimaryBrush}" />
                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding AllowEdit}"
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Checked="AllowEditChk_Changed"
                                          Unchecked="AllowEditChk_Changed" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ExportBtn" Content="Export" Width="92" Margin="0,0,8,0" Style="{StaticResource GhostButtonStyle}" Click="ExportBtn_Click" />
            <Button x:Name="RemoveBtn" Content="Remove" Width="92" Margin="0,0,8,0" Style="{StaticResource DangerButtonStyle}" Click="RemoveBtn_Click" />
            <Button x:Name="CloseBtn" Content="Close" Width="92" Style="{StaticResource GhostButtonStyle}" Click="CloseBtn_Click" />
        </StackPanel>
    </Grid>
</Window>

