<Window x:Class="HISA.CustomRegionCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Custom Region"
        Height="560"
        Width="620"
        MinHeight="500"
        MinWidth="560"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource UiBackgroundBrush}" Style="{StaticResource ModernWindowStyle}">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="14" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Create Custom Region" Style="{StaticResource TitleTextStyle}" />
                <TextBlock Grid.Row="1" Text="Build a custom region from existing regions or from a template." Style="{StaticResource SubtitleTextStyle}" />

                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Name" Style="{StaticResource FieldLabelTextStyle}" />
                        <TextBox x:Name="RegionNameBox" Style="{StaticResource ModernTextBoxStyle}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Template From Custom Region" Style="{StaticResource FieldLabelTextStyle}" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="TemplateCustomRegionBox" Grid.Column="0" Style="{StaticResource ComboInputStyle}" />
                            <Button Grid.Column="1"
                                    Content="Apply"
                                    Margin="8,0,0,0"
                                    Padding="12,8"
                                    Style="{StaticResource GhostButtonStyle}"
                                    Click="ApplyTemplate_Click" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="4,0,4,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="84" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="110" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Include" Style="{StaticResource FieldLabelTextStyle}" />
                    <TextBlock Grid.Column="1" Text="Region" Style="{StaticResource FieldLabelTextStyle}" />
                    <TextBlock Grid.Column="2" Text="Type" Style="{StaticResource FieldLabelTextStyle}" HorizontalAlignment="Center" />
                </Grid>

                <ListView x:Name="RegionList" Grid.Row="1" Style="{StaticResource ModernListViewStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid ClipToBounds="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="84" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="110" />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsSelected}"
                                          Style="{StaticResource ModernCheckBoxStyle}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Name}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource UiTextPrimaryBrush}" />
                                <TextBlock Grid.Column="2"
                                           Text="{Binding TypeLabel}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource UiTextMutedBrush}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Create" Width="96" Margin="0,0,8,0" IsDefault="True" Style="{StaticResource GoldButtonStyle}" Click="Create_Click" />
            <Button Content="Cancel" Width="96" IsCancel="True" Style="{StaticResource GhostButtonStyle}" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>

